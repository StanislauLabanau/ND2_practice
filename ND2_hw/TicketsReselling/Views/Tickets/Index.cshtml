@model TicketsViewModel
@using TicketsReselling.Business.Enums;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "MyTickets";
}

<h2>@Localizer["MyTickets"]</h2>

<div class="container-fluid pt-2">
    <div class="row pt-2 mb-2" style="border-bottom-style:groove">
        <div class="col-md-3 text-center ">
            @Localizer["Event"]
        </div>
        <div class="col-md-2 text-center">
            @Localizer["EventDate"]
        </div>
        <div class="col-md-2 text-center">
            @Localizer["PriceUSD"]
        </div>
        <div class="col-md-3 text-center">
            @Localizer["Buyer"]
        </div>
        <div class="col-md-2 text-center">
            @Localizer["Actions"]
        </div>
    </div>
    <div class="col-md-12 pt-2 text-center" style="text-decoration: underline">
        @Localizer["WaitingForConfirmation"]
    </div>

    @if (Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.WaitingForConfirmation).Count() == 0)
    {
        <div class="col-md-12 text-center text-info">
            @Localizer["NoTickets"]
        </div>
    }

    @foreach (var ticket in Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.WaitingForConfirmation))
    {
        <div class="row">
            <div class="col-md-3 text-center">
                @Html.ActionLink(@ticket.EventName, "EventWithTickets", "Events", new { eventId = ticket.EventId })
            </div>
            <div class="col-md-2 text-center">
                @ticket.EventDate.ToShortDateString()
            </div>
            <div class="col-md-2 text-center">
                @ticket.TicketPrice
            </div>
            <div class="col-md-3 text-center">
                @Html.ActionLink(@ticket.BuyerName, "PublicInfo", "UserInfo", new { userId = ticket.BuyerId })
            </div>
            <div class="col-md-1">
                @Html.ActionLink(@Localizer["Confirm"].Value.ToString(), "ConfirmOrder", "Tickets", new { ticketId = ticket.TicketId }, new { @class = "btn btn-primary pt-1 mb-1" })
            </div>
            <div class="col-md-1">
                @Html.ActionLink(@Localizer["Reject"].Value.ToString(), "RejectOrder", "Tickets", new { ticketId = ticket.TicketId }, new { @class = "btn btn-primary pt-1 mb-1" })
            </div>
        </div>
    }
    <div class="col-md-12 pt-4 text-center" style="text-decoration:underline">
        @Localizer["Selling"]
    </div>

    @if (Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.Selling).Count() == 0)
    {
        <div class="col-md-12 text-center text-info">
            @Localizer["NoTickets"]
        </div>
    }

    @foreach (var ticket in Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.Selling))
    {
        <div class="row">
            <div class="col-md-3 text-center">
                @Html.ActionLink(@ticket.EventName, "EventWithTickets", "Events", new { eventId = ticket.EventId })
            </div>
            <div class="col-md-2 text-center">
                @ticket.EventDate.ToShortDateString()
            </div>
            <div class="col-md-2 text-center">
                @ticket.TicketPrice
            </div>
            <div class="col-md-3 text-center">
                @Localizer["NoBuyerYet"]
            </div>
            <div class="col-md-2">
                @Html.ActionLink(@Localizer["Delete"].Value.ToString(), "RemoveTicket", "Tickets", new { ticketId = ticket.TicketId }, new { @class = "btn btn-primary pt-1 mb-1" })
            </div>
        </div>
    }
    <div class="col-md-12 pt-4 text-center" style="text-decoration:underline">
        @Localizer["Sold"]
    </div>

    @if (Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.Sold).Count() == 0)
    {
        <div class="col-md-12 text-center text-info">
            @Localizer["NoTickets"]
        </div>
    }

    @foreach (var ticket in Model.Tickets.Where(t => t.TicketStatus == (int)TicketStatuses.Sold))
    {
        <div class="row">
            <div class="col-md-3 text-center">
                @Html.ActionLink(@ticket.EventName, "EventWithTickets", "Events", new { eventId = ticket.EventId })
            </div>
            <div class="col-md-2 text-center">
                @ticket.EventDate.ToShortDateString()
            </div>
            <div class="col-md-2 text-center">
                @ticket.TicketPrice
            </div>
            <div class="col-md-3 text-center">
                @Html.ActionLink(@ticket.BuyerName, "PublicInfo", "UserInfo", new { userId = ticket.BuyerId })
            </div>
            <div class="col-md-2">
                @Html.ActionLink(@Localizer["AddTrack"].Value.ToString(), "AddTrack", "Tickets", new { ticketId = ticket.TicketId }, new { @class = "btn btn-primary pt-1 mb-1" })
            </div>
        </div>
    }
</div>
